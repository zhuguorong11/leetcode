
public class Solution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Solution solution = new Solution();
		int[] num = {22,13,25,32,11,68,72,33,42,90};
		solution.search(num, 0, num.length - 1, 5);
	}

	public void search(int[] num, int i, int j, int k) {
		System.out.println("aaa");
		if(i < j){
			int pos = partition(num, i, j);
			if(pos - i + 1 == k){
				System.out.println("Ç° kth max num is " + num[pos]);
				return;
			}else if(pos - i + 1 > k){
				search(num, i, pos - 1, k);
			}else{
				search(num, pos + 1, j, k - (pos - i));
			}
		}
	}

	public int partition(int[] num, int low, int high) {
		int tmp = num[low];
		while (low < high) {
			while (low < high && num[high] <= tmp) {
				--high;
			}
			swap(num, low, high);
			while (low < high && num[low] >= tmp) {
				++low;
			}
			swap(num, low, high);
		}
		return low;
	}

	public void swap(int[] num, int i, int j) {
		int tmp = num[i];
		num[i] = num[j];
		num[j] = tmp;
	}
}
